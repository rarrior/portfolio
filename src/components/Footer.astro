---
// Footer.astro
const currentYear = new Date().getFullYear();

const socialLinks = [
  { 
    name: 'GitHub', 
    href: 'https://github.com/yourusername',
    icon: '<path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/>'
  },
  { 
    name: 'LinkedIn', 
    href: 'https://linkedin.com/in/yourprofile',
    icon: '<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/>'
  },
  { 
    name: 'Twitter', 
    href: 'https://twitter.com/yourusername',
    icon: '<path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>'
  },
  { 
    name: 'Email', 
    href: 'mailto:your.email@example.com',
    icon: '<rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>'
  },
];

const quickLinks = [
  { label: 'About', href: '#about' },
  { label: 'Experience', href: '#experience' },
  { label: 'Projects', href: '#projects' },
  { label: 'Contact', href: '#contact' },
];
---

<footer class="relative border-t border-dark-800/50 bg-dark-900/30">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid md:grid-cols-3 gap-12 mb-8">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-bold text-gradient mb-4">Portfolio</h3>
        <p class="text-dark-400 mb-4">
          Full-Stack Developer passionate about creating elegant solutions to complex problems.
        </p>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.name}
              class="w-10 h-10 rounded-lg glass-effect flex items-center justify-center hover:border-primary-500/50 transition-all group"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-dark-400 group-hover:text-primary-400 transition-colors">
                <Fragment set:html={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-bold text-lg mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-dark-400 hover:text-primary-400 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- CTA -->
      <div>
        <h4 class="font-bold text-lg mb-4">Let's Connect</h4>
        <p class="text-dark-400 mb-4">
          Interested in working together? Feel free to reach out!
        </p>
        <a
          href="#contact"
          class="inline-block px-6 py-3 bg-primary-500 text-white rounded-lg font-medium hover:bg-primary-600 transition-colors"
        >
          Contact Me
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-dark-800/50 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-dark-500 text-sm">
        Â© {currentYear} Your Name. All rights reserved.
      </p>
      <p class="text-dark-500 text-sm flex items-center gap-2">
        Made with 
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-500">
          <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
        </svg>
        using Astro & Tailwind
      </p>
    </div>
  </div>
</footer>
