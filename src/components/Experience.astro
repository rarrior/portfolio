<section id="experience" class="section-padding px-6 relative bg-dark-900/30 scroll-mt-20" data-scroll-section>
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16" data-scroll-animate>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
        My <span class="text-gradient">Experience</span>
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-primary-400 to-primary-600 mx-auto rounded-full"></div>
    </div>

    <!-- Experience Timeline -->
    <div class="space-y-8">
      {experiences.map((exp, index) => (
        <div class="relative" data-scroll-animate>
          <div class="glass-effect rounded-2xl p-8 hover:border-primary-500/50 transition-all">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
              <div>
                <h3 class="text-2xl font-bold mb-1">{exp.role}</h3>
                <p class="text-primary-400 font-medium">{exp.company}</p>
              </div>
              <span class="inline-block px-4 py-2 rounded-full bg-primary-500/10 text-primary-400 text-sm font-medium mt-2 md:mt-0">
                {exp.period}
              </span>
            </div>
            
            <p class="text-dark-300 mb-4">{exp.description}</p>
            
            <div class="space-y-2">
              {exp.achievements.map((achievement) => (
                <div class="flex items-start gap-2">
                  <span class="text-primary-500 mt-1">‚ñ∏</span>
                  <span class="text-dark-400 text-sm">{achievement}</span>
                </div>
              ))}
            </div>
          </div>
          
          {index < experiences.length - 1 && (
            <div class="hidden md:block absolute left-1/2 -bottom-4 w-px h-8 bg-gradient-to-b from-primary-500 to-transparent"></div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<script define:vars={{ techStack }}>
  let currentIndex = 0;
  const itemsPerPage = 4;
  const totalPages = Math.ceil(techStack.length / itemsPerPage);

  const carousel = document.getElementById('tech-carousel');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const dots = document.querySelectorAll('.carousel-dot');

  function updateCarousel() {
    const startIdx = currentIndex * itemsPerPage;
    const visibleTech = techStack.slice(startIdx, startIdx + itemsPerPage);
    
    carousel.innerHTML = visibleTech.map(tech => `
      <div class="tech-item flex flex-col items-center justify-center p-6 rounded-xl bg-dark-800/50 hover:bg-dark-800 transition-all group cursor-pointer">
        <div class="text-5xl mb-3 transform group-hover:scale-110 transition-transform">
          ${tech.icon}
        </div>
        <span class="text-sm font-medium text-dark-300 group-hover:text-primary-400 transition-colors">
          ${tech.name}
        </span>
      </div>
    `).join('');

    // Update dots
    dots.forEach((dot, idx) => {
      if (idx === currentIndex) {
        dot.classList.remove('w-2', 'bg-dark-700');
        dot.classList.add('w-8', 'bg-primary-500');
      } else {
        dot.classList.remove('w-8', 'bg-primary-500');
        dot.classList.add('w-2', 'bg-dark-700');
      }
    });
  }

  prevBtn?.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + totalPages) % totalPages;
    updateCarousel();
  });

  nextBtn?.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % totalPages;
    updateCarousel();
  });

  dots.forEach((dot, idx) => {
    dot.addEventListener('click', () => {
      currentIndex = idx;
      updateCarousel();
    });
  });
</script>
