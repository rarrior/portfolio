---
import ContactButton from "./buttons/ContactButton.astro";
import LogoWall from "./LogoWall.astro";

// Hero.astro - Pure Astro component
---

<section class="relative overflow-hidden">
  <div
    class="container h-[100svh] min-h-[830px] max-md:pb-10 px-10 flex justify-center items-start flex-col"
  >
    <!-- Animated background gradient -->
    <div class="absolute inset-0 opacity-30">
      <div
        class="absolute top-1/4 -left-1/4 w-1/2 h-52 lg:h-60 bg-primary-700 rounded-full blur-[128px] animate-pulse-glow"
      >
      </div>
      <div
        class="absolute top-1/3 -right-1/4 w-1/2 h-40 lg:h-60 bg-primary-600 rounded-full blur-[128px] delay-1000 animate-pulse-glow"
      >
      </div>
    </div>

    <div class="flex flex-col md:flex-row md:justify-between w-full md:items-end">
      <div class="text-left flex flex-col items-start justify-start pt-40">
        <p class="text-xl text-[var(--white-icon)] mb-4">
          Hi, I'm <span class="text-primary text-2xl block shiny-white"
            >Raúl Arriola Gómez</span
          >
        </p>
        <h1
          class="text-7xl uppercase font-medium mb-6 leading-none animate-fade-in stagger-1 block text-gradient glow"
        >
          Frontend <br /><span class="text-primary-100">Engineer</span>
        </h1>
        <p class="text-lg text-[var(--white-icon)] w-96">
          +20 years working in Software Development, leading teams
        </p>
        <div class="flex justify-start gap-2 pt-3 md:pt-6">
          <ContactButton type="github" />
          <ContactButton type="linkedin" />
          <ContactButton type="mail" />
          <ContactButton type="phone" />
        </div>
      </div>

      <div>
        <div
          class="flex md:flex-col md:items-end items-center justify-center gap-3 pt-10 md:py-3"
        >
          <h1
            class="text-4xl uppercase font-medium mb-3 leading-none animate-fade-in stagger-1 block text-gradient glow"
          >
            20+
          </h1>
          <p>Years of Experience</p>
        </div>
      </div>
    </div>

    <LogoWall />

    <div
      class="mx-auto flex flex-row gap-6 justify-center items-center animate-fade-in stagger-3"
    >
      <a
        href="#experience"
        class="group relative font-medium text-lg px-8 py-4 bg-primary-500 text-black rounded-lg overflow-hidden transition-all hover:shadow-lg hover:shadow-primary-500/30"
      >
        <span class="relative z-10">My Experience</span>
        <div
          class="absolute inset-0 bg-gradient-to-r from-primary-600 to-primary-400 opacity-0 group-hover:opacity-100 transition-opacity"
        >
        </div>
      </a>
      <a
        href="#contact"
        class="font-medium text-lg px-8 py-4 bg-primary-500/10 text-primary-500 rounded-lg hover:border-primary-500 hover:shadow-primary-500/20 hover:shadow-lg transition-all"
      >
        Get in touch
      </a>
    </div>
  </div>
</section>
